<div class="container overflow-hidden py-1 px-lg-0">
    <div class="">
        <div class="row g-5 mx-lg-0 mt-0">
            <div class="col-lg-6 ps-lg-0 wow fadeInLeft" data-wow-delay="0.1s">
                <div class="position-relative h-100">

                    <h4 class="text-secondary text-uppercase "> <i class="fas fa-question-circle inquiry-icon" title="Submit an inquiry"></i> Invoice Inquiry</h4>
                    <h1 class="mb-1">Welcome To AICT Inquiry Portal</h1>
                    <h5 style="color:black;" class="mb-1">Unlock all the essential Invoice details effortlessly—and get real-time updates and information instantly!</h5>

                </div>
            </div>
            <div class="col-lg-6 about-text wow fadeInUp" data-wow-delay="0.3s">


                <br />
                <br />
                <br />
                <div class="form-container">
                    <h2>Invoice Inquiry</h2>
                    <hr />
                    <h3 style="text-align:left;font-weight:bold;">Select Container Type:</h3>
                    <!-- Main Options -->
                    <div class="radio-group">
                        <label for="cy">
                            <input type="radio" id="cy" name="container" value="cy" onclick="toggleMainOptions()">
                            <div class="custom-radio"></div>
                            <span style="margin-left:10px; font-weight:bold;">CY</span>
                        </label>
                        <label for="cfs">
                            <input type="radio" id="cfs" name="container" value="cfs" onclick="toggleMainOptions()">
                            <div class="custom-radio"></div>
                            <span style="margin-left:10px;font-weight:bold;">CFS</span>
                        </label>
                    </div>

                    <!-- CY Fields -->
                    <div id="cy-fields" class="hidden">
                        <div class="radio-group">
                            <label>
                                <input type="radio" name="cy-inquiry" value="bl" onclick="toggleInquiryOptions()">
                                <div class="custom-radio"></div>
                                <span style="font-weight:bold;"> Inquiry through BL No</span>
                            </label>
                            <label>
                                <input type="radio" name="cy-inquiry" value="vir" onclick="toggleInquiryOptions()">
                                <div class="custom-radio"></div>
                                <span style="font-weight:bold;">Inquiry through Vir No</span>
                            </label>
                        </div>
                        <div id="CYsearchViaBlNo" class="hidden">
                            <form id="bl-form" asp-action="InquiryInvoiceCYviaBLNo" asp-controller="InquiryPortal" method="post" onsubmit="return showAlert(event, 'Your updated amount: 0.000')">
                                <div class="form-section">
                                    <label style="font-weight:600;" for="bl-no-cy">Enter Your BL No:</label>
                                    <input type="text" id="bl-no-cy" name="BLNo" placeholder="BL No" required>
                                    <div class="form-note">Example: BL123456</div>

                                </div>
                                <div class="form-section">
                                    <label style="font-weight:600;" for="date-cy">Select Date:</label>
                                    <input type="date" id="date-cy" name="Date" required>
                                </div>
                                <div style="text-align: left;">
                                    <button class="buttonSearch" type="submit">Search</button>
                                </div>
                            </form>
                        </div>
                        <div id="CYsearchViaVirNo" class="hidden">
                            <form asp-action="InquiryInvoiceCYviaVirNo" asp-controller="InquiryPortal" method="post" onsubmit="return showAlert(event, 'Your updated amount: 0.000')">
                                <div class="form-section">
                                    <label style="font-weight:600;" for="vir-no">Enter Your Vir No / IGM No:</label>
                                    <input type="text" id="vir-no" name="VirNo" placeholder="Vir No / IGM No" required>
                                    <div class="form-note">Example: KPPI-0025-12982...</div>
                                    <label style="font-weight:600;" for="index-no">Enter Your Index No:</label>
                                    <input type="text" id="index-no" name="IndexNo" placeholder="Index No" required>
                                </div>
                                <div class="form-section">
                                    <label style="font-weight:600;" for="date-cy">Select Date:</label>
                                    <input type="date" id="date-cy" name="Date" required>
                                </div>
                                <div style="text-align: left;">
                                    <button class="buttonSearch" type="submit">Search</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- CFS Fields -->
                    <div id="cfs-fields" class="hidden">
                        <div class="radio-group">
                            <label>
                                <input type="radio" name="cfs-inquiry" value="bl" onclick="toggleInquiryOptions()">
                                <div class="custom-radio"></div>
                                <span style="font-weight:bold;">Inquiry through BL No</span>
                            </label>
                            <label>
                                <input type="radio" name="cfs-inquiry" value="vir" onclick="toggleInquiryOptions()">
                                <div class="custom-radio"></div>
                                <span style="font-weight:bold;">Inquiry through Vir No</span>
                            </label>
                        </div>
                        <div id="CFSsearchViaBlNo" class="hidden">
                            <form asp-action="InquiryInvoiceCFSviaBLNo" asp-controller="InquiryPortal" method="post" onsubmit="return showAlert(event, 'Your updated amount: 0.000')">
                                <div class="form-section">
                                    <label style="font-weight:600;" for="bl-no-cfs">Enter Your BL No:</label>
                                    <input type="text" id="bl-no-cfs" name="BLNo" placeholder="BL No" required>
                                    <div class="form-note">Example: BL123456</div>
                                    <label style="font-weight:600;" for="cbm-cfs">Enter Your CBM:</label>
                                    <input type="text" id="cbm-cfs" name="CBM" placeholder="CBM" required>
                                </div>
                                <div class="form-section">
                                    <label style="font-weight:600;" for="date-cfs">Select Date:</label>
                                    <input type="date" id="date-cfs" name="Date" required>
                                </div>
                                <div style="text-align: left;">
                                    <button class="buttonSearch" type="submit">Search</button>
                                </div>
                            </form>
                        </div>
                        <div id="CFSsearchViaVirNo" class="hidden">
                            <form asp-action="InquiryInvoiceCFSviaVirNo" asp-controller="InquiryPortal" method="post" onsubmit="return showAlert(event, 'Your updated amount: 0.000')">
                                <div class="form-section">
                                    <label style="font-weight:600;" for="vir-no-cfs">Enter Your Vir No / IGM No:</label>
                                    <input type="text" id="vir-no-cfs" name="VirNo" placeholder="Vir No / IGM No" required>
                                    <div class="form-note">Example: KPPI-0025-12982...</div>
                                    <label style="font-weight:600;" for="index-no-cfs">Enter Your Index No:</label>
                                    <input type="text" id="index-no-cfs" name="IndexNo" placeholder="Index No" required>
                                    <label style="font-weight:600;" for="cbm-cfs">Enter Your CBM:</label>
                                    <input type="text" id="cbm-cfs" name="CBM" placeholder="CBM">
                                </div>
                                <div class="form-section">
                                    <label style="font-weight:600;" for="date-cfs">Select Date:</label>
                                    <input type="date" id="date-cfs" name="Date" required>
                                </div>
                                <div style="text-align: left;">
                                    <button class="buttonSearch" type="submit">Search</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function toggleMainOptions() {
        const cyFields = document.getElementById('cy-fields');
        const cfsFields = document.getElementById('cfs-fields');
        const selectedContainer = document.querySelector('input[name="container"]:checked');

        if (selectedContainer) {
            if (selectedContainer.value === 'cy') {
                cyFields.classList.remove('hidden');
                cfsFields.classList.add('hidden');
            } else if (selectedContainer.value === 'cfs') {
                cyFields.classList.add('hidden');
                cfsFields.classList.remove('hidden');
            }
            toggleInquiryOptions();
        }
    }

    function toggleInquiryOptions() {
        const cyInquiry = document.querySelector('input[name="cy-inquiry"]:checked');
        const cfsInquiry = document.querySelector('input[name="cfs-inquiry"]:checked');
        const cyBlNo = document.getElementById('CYsearchViaBlNo');
        const cyVirNo = document.getElementById('CYsearchViaVirNo');
        const cfsBlNo = document.getElementById('CFSsearchViaBlNo');
        const cfsVirNo = document.getElementById('CFSsearchViaVirNo');

        // Reset visibility
        cyBlNo.classList.add('hidden');
        cyVirNo.classList.add('hidden');
        cfsBlNo.classList.add('hidden');
        cfsVirNo.classList.add('hidden');

        if (cyInquiry) {
            if (cyInquiry.value === 'bl') {
                cyBlNo.classList.remove('hidden');
            } else if (cyInquiry.value === 'vir') {
                cyVirNo.classList.remove('hidden');
            }
        }

        if (cfsInquiry) {
            if (cfsInquiry.value === 'bl') {
                cfsBlNo.classList.remove('hidden');
            } else if (cfsInquiry.value === 'vir') {
                cfsVirNo.classList.remove('hidden');
            }
        }
    }

    function showAlert(event, message) {
        event.preventDefault(); // Prevent the default form submission
        Swal.fire({
            icon: 'info',
            title: 'Search Results',
            text: message,
            confirmButtonText: 'OK',
            customClass: {
                confirmButton: 'custom-button'
            }
        }).then((result) => {
            if (result.isConfirmed) {
                // Proceed with the form submission
                event.target.submit();
            }
        });
        return false; // Prevent the form from submitting immediately
    }

</script>
