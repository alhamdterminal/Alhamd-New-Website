<style>
    body {
        font-family: Arial, sans-serif;
        background-color: aliceblue;
        margin: 0;
        padding: 0;
    }


    h2 {
        color: #fff;
        text-align: center;
        margin: 20px 0;
        font-size: 36px;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        background: #c9302c;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        padding: 10px;
        border-radius: 10px;
    }

    .form-container {
        max-width: 800px;
        margin: 20px auto;
        background: #ffffff;
        padding: 20px;
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
        background: linear-gradient(135deg, #ffffff, #f8f9fa);
    }

    .radio-group {
        margin-bottom: 20px;
       
    }

        .radio-group label {
            display: flex;
            align-items: center;
            padding-left: 40px;
            font-size: 18px;
            margin: 5px 0;
            cursor: pointer;
            color: #333;
            position: relative;
        }

        .radio-group input[type="radio"] {
            position: absolute;
            opacity: 0;
            cursor: pointer;
        }

            .radio-group input[type="radio"] + .custom-radio {
                position: absolute;
                left: 0;
                top: 50%;
                transform: translateY(-50%);
                width: 24px;
                height: 24px;
                border: 2px solid #c9302c;
                border-radius: 50%;
                background: #ffffff;
                transition: background 0.3s, border-color 0.3s;
            }

            .radio-group input[type="radio"]:checked + .custom-radio {
                background: #c9302c;
                border-color: #c9302c;
            }

        .radio-group .custom-radio::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: #ffffff;
            transition: background 0.3s;
        }

        .radio-group input[type="radio"]:checked + .custom-radio::after {
            background: #ffffff;
        }

    .form-section {
        margin-bottom: 25px;
    }

        .form-section label {
            display: block;
            margin: 10px 0;
            font-weight: 500;
            font-size: 16px;
        }

        .form-section input[type="text"],
        .form-section input[type="date"] {
            width: 100%;
            padding: 12px;
            margin: 5px 0;
            border: 1px solid #d3d3d3;
            border-radius: 8px;
            font-size: 16px;
            box-shadow: inset 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: border-color 0.3s, box-shadow 0.3s;
            background: #ffffff;
        }

            .form-section input[type="text"]:focus,
            .form-section input[type="date"]:focus {
                border-color: #c9302c;
                box-shadow: 0 0 8px rgba(52, 152, 219, 0.3);
                outline: none;
            }

        .form-section button {
            padding: 12px 28px;
            background: linear-gradient(45deg, #c9302c, #c9302c);
            color: #c9302c;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            transition: background 0.3s, transform 0.2s, box-shadow 0.3s;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            display: inline-block;
            position: relative;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

            .form-section button::before {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                width: 0;
                height: 0;
                border-radius: 50%;
                background: rgba(255, 255, 255, 0.3);
                transition: width 0.3s, height 0.3s;
                transform: translate(-50%, -50%);
            }

            .form-section button:hover::before {
                width: 300%;
                height: 300%;
            }

            .form-section button:hover {
                background: linear-gradient(45deg, #c9302c, #c9302c);
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
            }

            .form-section button:active {
                background: linear-gradient(45deg, #c9302c, #c9302c);
                transform: translateY(0);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

    .hidden {
        display: none;
    }

    .form-note {
        font-size: 14px;
        color: #7f8c8d;
        margin-top: -5px;
        margin-bottom: 10px;
    }

    .buttonSearch {
        background-color: #c9302c;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

    .inquiry-icon {
        font-size: 40px;
        color: #c9302c;
        cursor: pointer;
        transition: color 0.3s;
    }

        .inquiry-icon:hover {
            color: #c9302c;
        }

    .swal2-confirm.custom-button {
        background-color: #c9302c;
        color: #ffffff;
    }
</style>
