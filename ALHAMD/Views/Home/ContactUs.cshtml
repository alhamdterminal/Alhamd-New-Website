<script>
    function validateForm(event) {
        // Prevent the form from submitting
        event.preventDefault();

        // Get the form elements
        var firstName = document.querySelector('input[name="first_name"]').value;
        var lastName = document.querySelector('input[name="last_name"]').value;
        var email = document.querySelector('input[name="Email_Address"]').value;
        var phone = document.querySelector('input[name="Phone_Number"]').value;
        var message = document.querySelector('textarea[name="message"]').value;

        // Regular expressions for validation
        var nameRegex = /^[A-Za-z]+$/;
        var emailRegex = /^[^\s]+[^\s]+\.[^\s]+$/;
        var phoneRegex = /^[0-9]+$/;
        var messageRegex = /^[A-Za-z0-9\s]+$/;

        console.log(firstName);
        console.log(lastName);
        console.log(email);
        console.log(phone);
        console.log(message);

        if (firstName == "" || lastName == "" || email == "" || phone == "" || message == "") {
            Swal.fire({
                icon: 'error',
                title: 'Required Fields Error!',
                text: 'Please fill all fields.',
                confirmButtonText: 'OK',
                customClass: {
                    confirmButton: 'custom-button'
                }

            });
            return false;
        }


        // Validation
        if (!nameRegex.test(firstName)) {

            Swal.fire({
                icon: 'error',
                title: 'Validation Exception',
                text: 'First Name should contain only alphabetic characters.',
                confirmButtonText: 'OK',
                customClass: {
                    confirmButton: 'custom-button'
                }

            });

            return false;
        }

        if (!nameRegex.test(lastName)) {

            Swal.fire({
                icon: 'error',
                title: 'Validation Exception',
                text: 'Last Name should contain only alphabetic characters.',
                confirmButtonText: 'OK',
                customClass: {
                    confirmButton: 'custom-button'
                }

            });

            return false;
        }

        if (!emailRegex.test(email)) {

            Swal.fire({
                icon: 'error',
                title: 'Validation Exception',
                text: 'Email Address is not in a valid format.',
                confirmButtonText: 'OK',
                customClass: {
                    confirmButton: 'custom-button'
                }

            });

            return false;
        }

        if (!phoneRegex.test(phone)) {

            Swal.fire({
                icon: 'error',
                title: 'Validation Exception',
                text: 'Phone Number should contain only numeric characters.',
                confirmButtonText: 'OK',
                customClass: {
                    confirmButton: 'custom-button'
                }

            });

            return false;
        }

        if (!messageRegex.test(message)) {

            Swal.fire({
                icon: 'error',
                title: 'Validation Exception',
                text: 'Message should be alphanumeric.',
                confirmButtonText: 'OK',
                customClass: {
                    confirmButton: 'custom-button'
                }

            });

            return false;
        }

        // If all validations pass, submit the form
        event.target.submit();
    }

    document.addEventListener('DOMContentLoaded', function () {
        var form = document.querySelector('form');
        form.addEventListener('submit', validateForm);
    });
</script>





